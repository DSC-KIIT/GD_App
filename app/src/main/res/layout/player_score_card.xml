<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/backgroundDark"
    android:translationZ="30dp"
    android:id="@+id/player_score_card"
    android:elevation="10dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="12dp"
    android:layout_marginVertical="10dp"
    android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player_roll"
            android:text="P1"
            android:layout_marginHorizontal="5dp"
            android:textSize="30sp"
            android:textColor="@color/skyblue"
            android:textStyle="bold"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FLUENCY"
                    android:textColor="@color/colorAccentTheme"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccentTheme"
                    android:id="@+id/fluency"
                    android:text="0"
                    android:textSize="40dp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CONTENT"
                    android:textColor="@color/colorAccentTheme"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccentTheme"
                    android:id="@+id/content"
                    android:text="0"
                    android:textSize="40dp"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccentTheme"
                    android:text="TEAM WORK"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccentTheme"
                    android:id="@+id/teamwork"
                    android:text="0"
                    android:textSize="40dp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccentTheme"
                    android:text="BODY LANG."
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/colorAccentTheme"
                    android:layout_height="wrap_content"
                    android:id="@+id/bodylang"
                    android:text="0"
                    android:textSize="40dp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccentTheme"
                    android:text="LANGUAGE"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccentTheme"
                    android:id="@+id/language"
                    android:text="0"
                    android:textSize="40dp"
                    android:gravity="center"/>
            </LinearLayout>






        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>